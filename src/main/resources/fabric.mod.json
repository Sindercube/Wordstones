{
	"schemaVersion": 1,
	"id": "wordstones",
	"version": "${mod_version}",

	"name": "Wordstones",
	"description": "A nerdy take on Waystones",
	"authors": [ "Sindercube" ],
	"contact": {
		"homepage": "https://github.com/Sindercube",
		"sources": "https://github.com/Sindercube/Wordstones"
	},
	"license": "LGPL-3.0",
	"icon": "assets/wordstones/icon.png",

	"environment": "*",
	"entrypoints": {
		"main": [ "org.sindercube.wordstones.Wordstones" ],
		"client": [ "org.sindercube.wordstones.client.WordstonesClient" ]
	},
	"mixins": [ "wordstones.mixins.json" ],
	"accessWidener": "wordstones.accesswidener",
	"custom": {
		"loom:injected_interfaces": {
			"net/minecraft/entity/player/PlayerInventory": [ "org/sindercube/wordstones/content/entity/WordstonesPlayerInventory" ]
		}
	},

	"depends": {
		"minecraft": "*",
		"fabric-api": "*"
	},
	"suggests": {
		"minecraft": "~${minecraft_version}",
		"fabric-api": "~${fabric_version}"
	}
}
